---
import AddRestaurantForm from "./addRestaurantForm.astro";
import AddUserForm from "./addUserForm.astro";


---
<div class="bg-white rounded-lg border border-gray-200  py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="py-6 px-4 mx-auto max-w-screen-xl sm:py-6 lg:px-6">
        <div class="max-w-screen-md mb-2 lg:mb-2">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 ">Forms</h2>          
        </div> 
    </div>
    <div class="  pb-6 pt-0 md:p-6 m-2">
        <div class="grid grid-cols-2 grid-rows-1 gap-4">
            <div class="col-start-1 row-start-1 rounded-lg border border-gray-200">
                <!-- Modal content -->
                <div class="relative p-4 bg-white rounded-lg shadow sm:p-5">
                    <!-- Modal header -->
                    <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 ">
                        <h3 class="text-lg font-semibold text-gray-900 ">
                            Crear Usuario
                        </h3>
                    </div>
                    <!-- form user -->
                    <AddUserForm/>
                </div>
            </div>
            <div class="col-start-2 row-start-1 rounded-lg border border-gray-200">
                <!-- Modal content -->
                <div class="relative p-4 bg-white rounded-lg shadow sm:p-5">
                    <!-- Modal header -->
                    <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 ">
                        <h3 class="text-lg font-semibold text-gray-900 ">
                            Crear Restaurante
                        </h3>
                    </div>
                    <!-- form restaurant -->
                    <AddRestaurantForm/>
                </div>
            </div>
        </div>
    </div>
</div>