---

const {restaurant} = Astro.props;
---
<div class="relative p-4 text-center bg-white rounded-lg shadow sm:p-5">
    <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 ">
        <h3 class="text-lg font-semibold text-gray-900 ">
            Update {restaurant.name}
        </h3>
    </div>
<form method="POST" action="/admin/forms/formsDashboard"  id="update_restaurant">
    <input type="hidden" name="formId" value="update_restaurant" />
     <div class="grid gap-4 mb-4 sm:grid-cols-2">
        <input type="hidden" name="id" value={restaurant.id} />

         <div>
             <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Name</label>
             <input type="text" value={restaurant.name} name="name" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " placeholder="First Name" required="">
         </div>
         <div>
             <label for="brand" class="block mb-2 text-sm font-medium text-gray-900 ">Address</label>
             <input type="text" value={restaurant.address} name="address" id="address" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " placeholder="Last Name" required="">
         </div>
         <div>
             <label for="website" class="block mb-2 text-sm font-medium text-gray-900 ">Url Web</label>
             <input type="text" value={restaurant.website} name="website" id="website" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " placeholder="Url Web" required="">
         </div>
         <div>
             <label for="maps_url" class="block mb-2 text-sm font-medium text-gray-900 ">Url Localization</label>
             <input type="text" value={restaurant.maps_url} name="maps_url" id="maps_url" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " placeholder="Url Localization" required="">
         </div>
         <div class="">
           <label for="photo" class="block mb-2 text-sm font-medium text-gray-900 ">Image</label>
           <input type="text" value={restaurant.photo} name="photo" id="photo" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " placeholder="Image" required="">
       </div>
     </div>
     <button type="submit" class="text-blue-700 hover:text-white border border-blue-100 bg-blue-100 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Crear</button>
 </form>
</div>