---
import Search from "@/components/common/Search.astro";
import { listRestaurants } from "@/repository/restaurants";

// Obtener el término de búsqueda desde la URL (query string)
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get("q") || "";

// Obtener la lista de restaurantes, pasando el término de búsqueda si existe
const restaurants = await listRestaurants(searchQuery);
---
<div class="bg-white rounded-lg border border-gray-20 py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="max-w-screen-md mb-8 lg:mb-16">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 pb-6">
        Restaurants
      </h2>

      
      <!-- CONTENIDO INTERIOR -->
      <div class="grid grid-cols-2 grid-rows-1 gap-4">
        <!-- Buscador -->
        <Search searchQuery={searchQuery}/>
      </div>
    </div>

    <!-- Tarjetas de restaurante -->
    <div class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
      {restaurants.map(restaurant => (
        <a href={`/admin/restaurants/restaurantDetails/${restaurant.id}`} >
          <div class="border border-gray-200 rounded-md p-4">
            {restaurant.photo && (
              <img 
                src={restaurant.photo} 
                alt="Foto de perfil" 
                class="w-full h-48 mb-2 object-cover rounded-md" 
              />
            )}
            <h3 class="mb-2 text-xl font-bold">{restaurant.name}</h3>
            <p class="text-gray-500">{restaurant.address}</p>
          </div>
        </a>
      ))}
    </div>


  </div>
