---
import { listRestaurants } from "@/repository/restaurants";
import { heart } from "../images/images";
// Obtener el término de búsqueda desde la URL (query string)
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get("q") || "";

// Obtener la lista de restaurantes, pasando el término de búsqueda si existe
const restaurants = await listRestaurants(searchQuery);
